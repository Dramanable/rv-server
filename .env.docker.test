# 🔧 Variables d'environnement pour tests d'intégration locaux avec Docker
# Ces variables sont utilisées quand les tests tournent dans Docker Compose

# 🐳 Docker Services (utilise les noms des services comme hostnames)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_URL=postgresql://postgres:postgres@postgres:5432/cleanarchi_dev

MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_URL=mongodb://admin:admin@mongodb:27017/cleanarchi_dev

# 🧪 Test Environment
NODE_ENV=test
CI=false

# 🔐 JWT Secrets for Tests
JWT_SECRET=test_jwt_secret_for_docker
JWT_REFRESH_SECRET=test_refresh_secret_for_docker
