{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@domain/*": ["src/domain/*"],
      "@application/*": ["src/application/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@presentation/*": ["src/presentation/*"],
      "@shared/*": ["src/shared/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "disableReferencedProjectLoad": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".nyc_output",
    "tmp",
    "logs",
    "*.log",
    "*.config.js",
    ".commitlintrc.js",
    "jest.config.js",
    "jest.*.config.js",
    "scripts/**/*.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "src/infrastructure/database/migrations/nosql/**/*.ts",
    "src/infrastructure/database/modules/dynamic-repository.module.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "allowJs": true
    },
    "files": true
  }
}
