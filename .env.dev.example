# 🔧 Variables d'environnement pour le développement
# Copier ce fichier vers .env.dev si besoin

# 🌍 Application
NODE_ENV=development
PORT=3000
APP_NAME="Clean Architecture NestJS (Development)"
APP_VERSION="1.0.0-dev"

# 🗄️ PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=dev_user
DB_PASSWORD=dev_password123
DB_DATABASE=cleanarchi_dev

# 🔐 JWT Configuration (DEV ONLY - NE PAS UTILISER EN PRODUCTION)
ACCESS_TOKEN_SECRET=dev-access-token-secret-for-development-only-32chars
REFRESH_TOKEN_SECRET=dev-refresh-token-secret-for-development-only-32chars
ACCESS_TOKEN_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION_DAYS=30

# 🔒 Security (Mode développement - plus rapide)
BCRYPT_ROUNDS=4

# 📝 Logging & Debug
LOG_LEVEL=debug
DEBUG=*

# 🚀 Development Tools
NEST_DEBUG=true
