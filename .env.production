# üöÄ Configuration Environnement - Mode Production
# üîí IMPORTANT: Utilisez des valeurs s√©curis√©es en production !

# ========================================
# üåç Application Environment
# ========================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=warn

# ========================================
# üóÑÔ∏è Database Configuration (PostgreSQL)
# ========================================
DATABASE_TYPE=postgresql
DATABASE_HOST=${DB_HOST}
DATABASE_PORT=${DB_PORT}
DATABASE_USERNAME=${DB_USERNAME}
DATABASE_PASSWORD=${DB_PASSWORD}
DATABASE_NAME=${DB_NAME}
DATABASE_POOL_SIZE=20

# ========================================
# üîê JWT Configuration
# ========================================
ACCESS_TOKEN_SECRET=${ACCESS_TOKEN_SECRET}
REFRESH_TOKEN_SECRET=${REFRESH_TOKEN_SECRET}
ACCESS_TOKEN_EXPIRATION=900
REFRESH_TOKEN_EXPIRATION_DAYS=7

# ========================================
# üîß Security Configuration
# ========================================
BCRYPT_ROUNDS=14
JWT_ISSUER=${APP_NAME}
JWT_AUDIENCE=${APP_AUDIENCE}

# ========================================
# üåê CORS Configuration
# ========================================
CORS_ORIGINS=${ALLOWED_ORIGINS}
CORS_CREDENTIALS=false

# ========================================
# üìä Performance Configuration
# ========================================
COMPRESSION_LEVEL=6
COMPRESSION_THRESHOLD=1024
BODY_PARSER_LIMIT=10mb

# ========================================
# üîß Rate Limiting
# ========================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# ========================================
# üçÉ Redis Configuration
# ========================================
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}

# ========================================
# üìß Email Configuration (Future)
# ========================================
EMAIL_HOST=${SMTP_HOST}
EMAIL_PORT=${SMTP_PORT}
EMAIL_USER=${SMTP_USER}
EMAIL_PASSWORD=${SMTP_PASSWORD}

# ========================================
# üîç Monitoring Configuration
# ========================================
HEALTH_CHECK_TIMEOUT=3000
HEALTH_CHECK_INTERVAL=30000

# ========================================
# üéØ Feature Flags
# ========================================
FEATURE_SWAGGER=false
FEATURE_DEBUG_LOGS=false
FEATURE_METRICS=true
